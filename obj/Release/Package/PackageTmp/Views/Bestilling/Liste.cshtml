@model List<Pizza_Ukesoppgave.Models.Bestilling>
@{
    ViewBag.Title = "Bestillinger";
}
<h2 class="mb-3"><i class='fas fa-folder-open'></i> Bestillinger</h2>


<body>
    <div class="row my-5">

        <div class="col-sm-8">
            <table class="table">
                <tr>
                    <th>Pizza Type</th>
                    <th>Tykkelse</th>
                    <th>Antall</th>
                    <th>Navn</th>
                    <th>Adresse</th>
                    <th>Telefoner</th>

                </tr>
                @foreach (var bestilling in Model)
                {
                    <tr>
                        <td>@bestilling.PizzaType</td>
                        <td>@bestilling.Tykkelse</td>
                        <td>@bestilling.Antall</td>
                        <td>@bestilling.Kunde.Navn</td>
                        <td>@bestilling.Kunde.Adresse </td>
                        <td>@bestilling.Kunde.Telefoner  </td>
                        <td> <a href="/bestilling/slett?id=@bestilling.Id" class="text-danger btn " ><i class='fas fa-trash-alt'></i> </a></td>








                    </tr>
                }
            </table>
        </div>






    </div>

    <div > <a href="/bestilling/register" class="btn btn-primary"><i class='fas fa-plus-square'></i> Bestilling</a>  </div>
</body>

